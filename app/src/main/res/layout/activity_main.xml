<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="@drawable/wave">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TELEPHONE DIRECTORY"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#3f6c9a"
            android:layout_marginTop="40dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/staff"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:scaleType="fitCenter"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_people_24"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="STAFF"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/faculty"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:scaleType="fitCenter"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_emoji_people_24"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="FACULTY"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:scaleType="fitCenter"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_baseline_contact_emergency_24"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="EMERGENCY"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:scaleType="fitCenter"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_baseline_local_hospital_24"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="AAROGYA"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_weight="1"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:scaleType="fitCenter"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_baseline_desk_24" />
                            <TextView
                                android:layout_width="match_parent"
                                android:text="RECEPTION"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_weight="1"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:scaleType="fitCenter"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_baseline_security_24"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:text="MAIN GATE"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>